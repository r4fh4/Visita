		$cache_content = $cache->read( $cache_id ) ;
		
		if( !$cache_content ){
			list( $r , $records , $page , $total_pages ) = default_search( "tb_audios" , $where, "", "dt_criacao desc" );
			ob_start() ;
			header('Content-Type: text/xml') ;
