		require( ROOT_WEBSITE . "scripts/load_globals.php" ) ;
		
		//Monta a lista de audios da direita, retirando a audio ja exibida
		$where[] = 'active = 1';
		$results_per_page = 20 ;
		
		// controle de cache
		$cache = new cache() ;
