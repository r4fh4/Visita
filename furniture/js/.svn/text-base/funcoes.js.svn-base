changeFont=function(opt){
	var	size = $('body').css('font-size').split('px'),
		tam = size[0];
	if(opt == 'max' && tam < 12)
		$('body').css('font-size',(parseFloat(tam)+1)+'px');
	if(opt == 'min' && tam > 10)
		$('body').css('font-size',(parseFloat(tam)-1)+'px');
}

